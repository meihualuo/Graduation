<resources>





    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowIsTranslucent">true</item>
<!--        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>-->
<!--        <item name="android:activityOpenEnterAnimation">@anim/right_to_left_in</item>-->
<!--        <item name="android:activityCloseExitAnimation">@anim/right_to_left_out</item>-->
<!--        <item name="android:actionMenuTextColor">@color/text_black</item>-->
<!--        <item name="actionBarStyle">@android:style/TextAppearance.Holo</item>-->
<!--        <item name="colorControlHighlight">@color/press_toum_half</item>-->
<!--        <item name="colorAccent">@color/text_blue</item>-->
        <item name="android:configChanges">orientation</item>
    </style>

    <style name="main_btn">
        <item name="android:background">@drawable/btn_fillet</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:radius">15dp</item>
    </style>

</resources>
