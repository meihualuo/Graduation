<resources>



    <style name="text_L">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/lineExtra</item>
        <item name="android:paddingRight">@dimen/lineExtra</item>
        <item name="android:textSize">@dimen/text_L</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:lineSpacingExtra">@dimen/lineExtra</item>
    </style>

    <style name="text_m">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/lineExtra</item>
        <item name="android:paddingRight">@dimen/lineExtra</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:lineSpacingExtra">@dimen/lineExtra</item>
    </style>


    <style name="loading_dialog" parent="Widget.AppCompat.ProgressBar">

        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!--弹出框时让背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="trace_detail_text_action">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowIsTranslucent">true</item>
<!--        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>-->
<!--        <item name="android:activityOpenEnterAnimation">@anim/right_to_left_in</item>-->
<!--        <item name="android:activityCloseExitAnimation">@anim/right_to_left_out</item>-->
<!--        <item name="android:actionMenuTextColor">@color/text_black</item>-->
<!--        <item name="actionBarStyle">@android:style/TextAppearance.Holo</item>-->
<!--        <item name="colorControlHighlight">@color/press_toum_half</item>-->
<!--        <item name="colorAccent">@color/text_blue</item>-->
        <item name="android:configChanges">orientation</item>
    </style>

    <style name="main_btn">
        <item name="android:background">@drawable/btn_fillet</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:radius">15dp</item>
    </style>

</resources>
